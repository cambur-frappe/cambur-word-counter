{
  "name": "cambur-word-counter",
  "description": "Webcomponent cambur-word-counter following open-wc recommendations",
  "license": "MIT",
  "author": "cambur-word-counter",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "dev": "concurrently \"tailwindcss -i ./src/tailwind/tailwindlib.css -o ./src/tailwind/tw.css --watch\" \"twlit --input ./src/tailwind/tw.css --output ./src/tailwind/twlit.ts\"",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\""
  },
  "dependencies": {
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@web/dev-server": "^0.4.6",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "twlit": "^0.0.1-alpha.37",
    "typescript": "^5.5.3"
  },
  "customElements": "custom-elements.json"
}
